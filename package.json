{
  "name": "slam",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "PORT=8080 react-scripts start",
    "build": "react-scripts build",
    "heroku-postbuild": "yarn db:migrate && yarn db:sync && yarn build",
    "test": "react-scripts test",
    "server": "nodemon server",
    "eject": "react-scripts eject",
    "db:create": "psql -c 'create database slams'",
    "db:destroy": "psql -c 'drop database slams'",
    "db:migrate": "node ./tasks/db/migrate",
    "db:sync": "node ./tasks/db/sync",
    "db:drop": "node ./tasks/db/drop",
    "db:init": "yarn db:destroy && yarn db:create && yarn db:migrate && yarn db:sync"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.2",
    "date-fns": "^2.9.0",
    "figaro-js": "^3.0.2",
    "gaxios": "^2.3.1",
    "koa": "^2.11.0",
    "koa-router": "^8.0.6",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.2",
    "pg": "^7.18.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.1",
    "react-use": "^13.26.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3000"
}
